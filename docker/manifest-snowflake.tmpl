image: plugins/drone-liquibase:{{#if build.tag}}{{trimPrefix "v" build.tag}}{{else}}latest{{/if}}-snowflake
{{#if build.tags}}
tags:
{{#each build.tags}}
  - {{this}}
{{/each}}
{{/if}}
manifests:
  -
    image: plugins/drone-liquibase:{{#if build.tag}}{{trimPrefix "v" build.tag}}{{else}}latest{{/if}}-linux-snowflake-amd64
    platform:
      architecture: amd64
      os: linux
  -
    image: plugins/drone-liquibase:{{#if build.tag}}{{trimPrefix "v" build.tag}}{{else}}latest{{/if}}-linux-snowflake-arm64
    platform:
      variant: v8
      architecture: arm64
      os: linux
